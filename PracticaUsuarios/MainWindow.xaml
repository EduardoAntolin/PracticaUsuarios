<Window x:Class="PracticaUsuarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaUsuarios"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <StackPanel>
        <TextBlock Margin="10,10,10,10">Nuevo Usuario</TextBlock>
        <ComboBox Margin="10,20,10,10" x:Name="cbUsuario" SelectionChanged="cbUsuario_SelectionChanged">
            <ComboBoxItem>Alumno</ComboBoxItem>
            <ComboBoxItem>Maestro</ComboBoxItem>
        </ComboBox>
        <StackPanel Name="spPanelConfiguracion">

        </StackPanel>
        <Button  x:Name="btnGuardarUsuario" Click="btnGuardarUsuario_Click" Content="Guardar" Margin="250,0,10,0"/>
    </StackPanel>
</Window>

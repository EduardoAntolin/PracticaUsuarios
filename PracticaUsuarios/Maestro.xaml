<UserControl x:Class="PracticaUsuarios.Alumno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaUsuarios"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <StackPanel Background="White">
        <TextBlock Margin="10,10,20,10" Name="lblNombreMaestro">Nombre</TextBlock>
        <TextBox Margin="10,10,20,10" Name="txtNombreMaestro"></TextBox>
        <TextBlock  Margin="10,10,20,10" Name="lblTelefonoMaestro">Telefono</TextBlock>
        <TextBox Margin="10,10,20,10" Name="txtTelefonoMaestro"></TextBox>
        <TextBlock Margin="10,10,20,10" Name="lblCedulaMaestro">Cédula profesional</TextBlock>
        <TextBox Margin="10,10,20,10" Name="txtCedulaMaestro"></TextBox>
        <TextBlock Margin="10,10,20,10" Name="lblCarreraMaestro">Carrera estudiada</TextBlock>
        <TextBox Margin="10,10,20,10" Name="txtCarreraMaestro"></TextBox>
    </StackPanel>
</UserControl>
